{
    "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 4,
        "indentStyle": "tab",
        "lineWidth": 100
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "defaultBranch": "master"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noConstEnum": "off"
            },
            "style": {
                "useTemplate": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded"
        }
    }
}
